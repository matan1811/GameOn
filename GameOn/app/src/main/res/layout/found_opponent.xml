<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foundoppoid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dorma.gameon.MainActivity"
    android:background="@drawable/foundoppo">

    <TextView
        android:text="Got A Ball?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gotball2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="234dp" />

    <CheckBox
        android:text="Got A Ball?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gotball1"
        android:layout_alignBaseline="@+id/gotball2"
        android:layout_alignBottom="@+id/gotball2"
        android:layout_alignStart="@+id/ready1" />

    <ToggleButton
        android:textOff="NOT Ready!"
        android:textOn="Ready!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:id="@+id/ready2"
        android:layout_below="@+id/gotball1"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ready!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ready1"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/gotball1"
        android:layout_alignParentEnd="true" />



</RelativeLayout>

