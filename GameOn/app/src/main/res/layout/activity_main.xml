<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dorma.gameon.MainActivity"
    android:orientation="vertical"
    android:weightSum="6.62" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:srcCompat="@drawable/settings"
        android:layout_marginLeft="280dp"
        android:id="@+id/imageView"
        android:layout_weight="0.2"/>


    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.dorma.gameon.MainActivity"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="3">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/player1"
            android:layout_weight="1"
            android:id="@+id/player" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/playerstat"
            android:layout_weight="1"
            android:id="@+id/playerstat" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />



    </LinearLayout>

    <TextView
        android:text="Choose your game:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="0.8"
        android:textSize="24sp"
        android:elevation="4dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/sports_layout"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.dorma.gameon.MainActivity"
        android:orientation="horizontal"
        android:weightSum="3.2"
        android:layout_weight="0.62">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tennis_selector"
            android:layout_weight="1.00"
            android:id="@+id/tennis_image"
            android:button="@android:color/transparent"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/basketball_selector"
            android:layout_weight="1.00"
            android:id="@+id/basketball_image"
            android:button="@android:color/transparent"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/soccer_selector"
            android:layout_weight="1.00"
            android:id="@+id/soccer_image"
            android:button="@android:color/transparent"
            />


    </LinearLayout>

    <ImageView android:layout_width="130dp"
        android:layout_height="120dp"
        android:src="@drawable/powerbutton2"
        android:id="@+id/search_now"
        android:layout_gravity="center"
        android:layout_weight="2"/>

    <!--<FrameLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">



        <ImageView android:layout_width="216dp"
            android:layout_height="170dp"
            android:src="@drawable/circle1"
            android:layout_gravity="center"
            android:id="@+id/search_round"/>

    </FrameLayout>-->


</LinearLayout>